	month = jan,
	year = {2013},
	keywords = {benchmark, Bias, Precision, {qPCR} curve analysis, Resolution, Transcriptional biomarker},
	pages = {32--46},
	file = {ScienceDirect Full Text PDF:/home/kevin/uw/zotero/storage/VPUVUX4D/Ruijter et al. - 2013 - Evaluation of qPCR curve analysis methods for reli.pdf:application/pdf;ScienceDirect Snapshot:/home/kevin/uw/zotero/storage/QWJA25KJ/S1046202312002290.html:text/html}
},

