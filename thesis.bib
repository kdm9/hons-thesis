	author = {Murchie, E. H. and Hubbart, S. and Peng, S. and Horton, P.},
	month = jan,
	year = {2005},
	keywords = {Acclimation, Gene Expression, high light, Leaf development, Photosynthesis, rice},
	pages = {449--460},
	file = {Full Text PDF:/home/kevin/uw/Programs/ZoteroDB/storage/RPKVCH8R/Murchie et al. - 2005 - Acclimation of photosynthesis to high irradiance i.pdf:application/pdf}
},

