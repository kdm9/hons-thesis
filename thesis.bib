	pages = {988--993},
	file = {Takahashi et al. - 2010 - The Solar Action Spectrum of Photosystem II Damage.pdf:/home/kevin/uw/zotero/storage/7CD2JIWQ/Takahashi et al. - 2010 - The Solar Action Spectrum of Photosystem II Damage.pdf:application/pdf}
},

